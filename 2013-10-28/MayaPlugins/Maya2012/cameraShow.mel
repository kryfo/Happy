//////////////////////////////////////////////////////////////////////
headsUpDisplay -rp 0 0;
headsUpDisplay
-section                0
-block                  0
-label                  "Resolution"
-blockSize              "large"
-labelFontSize          "large"
-dataFontSize           "large"
-command                "Pixal()"
-attachToRefresh
useResolution;

global proc string Pixal()
  {
    string  $pixal_h =`getAttr   defaultResolution.width`;
    string  $pixal_W =`getAttr   defaultResolution.height`;
    string $pixal= $pixal_h +"x"+$pixal_W;
    return $pixal;
  }
