headsUpDisplay -rp 7 0;
headsUpDisplay
-section                7
-block                  0
-label                  "Camera"
-blockSize              "large"
-labelFontSize          "large"
-dataFontSize           "large"
-command                "cameraName()"
-attachToRefresh
useCameraName;

global proc string cameraName()
{
  string $curPanel = `getPanel -withFocus`;
  string $camName =  `modelPanel -q -camera $curPanel`;
  return $camName;
}
//////////////////////////////////////////////////////////////////////
headsUpDisplay -rp 9 1;
headsUpDisplay
-section                9
-block                  1
-label                  "Producer"
-blockSize              "large"
-labelFontSize          "large"
-dataFontSize           "large"
-command                "Producer()"
-attachToRefresh
useProducer;

global proc string Producer()
  {
  string  $filepath = "C:/MYname";
  string $user;
  if(`filetest -r $filepath`)
      {
  	$fileread=`fopen $filepath "r"`;
  	string $name = `fgetline $fileread`;
  	fclose $fileread;
  	$user=$name;
        }
  if($user==""){$user="写上你的名字";}
  return $user;
  }
//////////////////////////////////////////////////////////////////////
headsUpDisplay -rp 9 0;
headsUpDisplay
-section                9
-block                  0
-label                  "FocalLength"
-blockSize              "large"
-labelFontSize          "large"
-dataFontSize           "large"
-command                "camFocalth()"
-attachToRefresh        
useFocalLength;

global proc string camFocalth()
{
  string $curPanel = `getPanel -withFocus`;
  string $camname =  `modelPanel -q -camera $curPanel`;
  string $focal=getAttr($camname+".focalLength"); 
	return  $focal;
}
//////////////////////////////////////////////////////////////////////
string $perspCameras[] = `listCameras -p`;
for($cama in $perspCameras)
{
if((size($perspCameras)==1)) 
 {setAttr($cama+".displayResolution" ) 1;setAttr($cama+".displaySafeAction") 1;setAttr($cama+".displayGateMask" ) 0;setAttr($cama+".overscan") 1.2;}

else if((!`getAttr -l ($cama+".renderable")`)&&(!`gmatch $cama "persp"`))
 {setAttr($cama+".displayResolution" ) 1;setAttr($cama+".displaySafeAction") 1;setAttr($cama+".displayGateMask" ) 0;setAttr($cama+".overscan") 1.2;}
}
