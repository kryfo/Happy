headsUpDisplay -rp 0 1;
headsUpDisplay
-section                0
-block                  1
-label                  "Format"
-blockSize              "large"
-labelFontSize          "large"
-dataFontSize           "large"
-event                  "timeUnitChanged" 
-command                "timeUnit()"
useTimeUnit;

global proc string timeUnit()
{
  string $pal =`currentUnit -q -t`;
	return $pal;
}
//////////////////////////////////////////////////////////////////////
headsUpDisplay -rp 4 0;
headsUpDisplay
-section                4
-block                  0
-label                  "Scenes"
-blockSize              "large"
-labelFontSize          "large"
-dataFontSize           "large"
-command                "Scenes()"
-attachToRefresh
useScenes;

global proc string Scenes()
{
string $fileName=`file -q -sn -shn`;
if($fileName==""){$fileName="文件未命名";}
else if(!`gmatch $fileName "*e*p*s*v*"`){$fileName="文件名不规范";}
else{$fileName=`file -q -sn -shn`;}
string $baseName=basenameEx($fileName);
return $baseName;
}
