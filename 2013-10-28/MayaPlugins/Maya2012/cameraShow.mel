headsUpDisplay -rp 6 0;
headsUpDisplay
-section                6
-block                  0
-label                  "Frame"
-blockSize              "large" 
-labelFontSize          "large"
-dataFontSize           "large"
-command                "perFrame()"
-attachToRefresh
usePerFrame;

global proc string perFrame()
{
 int    $curframe=`currentTime -q`;
 int    $maxframe=`playbackOptions -q -aet`;
 string  $outframe = ($curframe +"/" + $maxframe);
      return $outframe;
}
